<!DOCTYPE html>

<head>
    <link rel="icon" href="/static/images/favicon.png" type="image/icon type">
    <title>TODO APPLICATION</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <h2>To-Do APPLICATION</h2>
        <div class="todo">
            <form action="/" method="POST" class="todo-header">
                <textarea name="content"></textarea>
                <br><br>
                <center><button type="submit">Add To the List</button></center>
            </form>
            <br>
            <ul class="todo-list">
                <% content.forEach(details => { %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-name">
                            <%= details.content %>
                        </div>
                        <a href="/edit/<%= details._id %>" class="edit">
                            <span class="fas fa-edit"></span>
                        </a>
                        <a href="/remove/<%= details._id %>" class="remove">
                            <span class="fas fa-times"></span>
                        </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</body>